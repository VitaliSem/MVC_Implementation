@model TeacherModel

@using CRM_for_English_School.AppCore.Enums

@{ ViewData["Title"] = "Добавление преподавателя"; }
<div class="container">
    <h2>Добавить преподавателя</h2>
    @using (Html.BeginForm("AddTeacher", "Teachers", FormMethod.Post, new { @enctype = "multipart/form-data" }))
    {
        <div>
            @Html.ValidationSummary()
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="LastName">Фамилия</label>
                <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName">
                <span class="alert-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FirstName">Имя</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName">
                <span class="alert-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="MiddleName">Отчество</label>
                <input type="text" class="form-control" id="MiddleName" name="MiddleName" asp-for="MiddleName">
                <span class="alert-danger" asp-validation-for="MiddleName"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="BirthDate">Дата рождения</label>
                <input type="date" class="form-control" id="BirthDate" name="BirthDate" asp-for="BirthDate">
                <span asp-validation-for="BirthDate" class="alert-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Email">Email</label>
                <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input type="email" class="form-control" id="Email" name="Email" asp-for="Email">
                    <span asp-validation-for="Email" class="alert-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="PhoneNumber">Номер телефона</label>
                <div class="input-group">
                    <span class="input-group-text">+375</span>
                    <input type="tel" class="form-control" id="PhoneNumber" name="PhoneNumber" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <label for="GraduatedFrom">Учебное заведение</label>
                <input type="text" class="form-control" id="GraduatedFrom" name="GraduatedFrom" required>
            </div>
            <div class="col-md-6">
                <label asp-for="Degree">Ученая степень</label>
                <div>
                    <select class="form-select" asp-for="Degree" asp-items="Html.GetEnumSelectList<Degree>()">
                        <option selected="selected" value="Please select"></option>
                    </select>
                    <span asp-validation-for="Degree" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label for="MainSpecialization">Основная специализация</label>
                <input type="text" class="form-control" id="MainSpecialization" name="MainSpecialization" required>
            </div>
            <div class="col-md-6">
                <label>Загрузить фото</label>
                <input name="PhotoFile" type="file" class="form-control" />
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-success">Добавить</button>
    }
</div>

@section Scripts{ @await Html.PartialAsync("_ValidationScriptsPartial.cshtml") }