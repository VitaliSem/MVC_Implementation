@model CourseModel
@using CRM_for_English_School.BLL.Entities;
@{
    ViewData["Title"] = "Редактирование курса";
}
<div class="container">
    <h2>Редактировать курс</h2>
    <br />
    @using (Html.BeginForm("EditCourse", "Courses", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        ;

        <div>
            @Html.ValidationSummary()
        </div>

        <div class="row g-3">
            <div class="col-md-12">
                <label asp-for="Name">Название курса</label>
                <input type="text" class="form-control" id="Name" name="Name" asp-for="Name">
                <span class="alert-danger" asp-validation-for="Name"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="EnglishLevel">Уровень языка</label>
                <div>
                    <select class="form-select" asp-for="EnglishLevel" asp-items="Html.GetEnumSelectList<EnglishLevel>()">
                        <option selected="selected" value="Please select"></option>
                    </select>
                    <span asp-validation-for="EnglishLevel" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label class="form-check-label" asp-for="ExpectedStartDate">Дата старта</label>
                <input type="datetime" class="form-control" id="ExpectedStartDate" name="ExpectedStartDate" asp-for="ExpectedStartDate">
                <span class="alert-danger" asp-validation-for="ExpectedStartDate"></span>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-success">Сохранить</button>
        @Html.ActionLink("Удалить", "DeleteCourse", "Courses", new { id = Model.Id }, new { @class = "btn btn-danger" })
    }
</div>

@section Scripts{ @await Html.PartialAsync("_ValidationScriptsPartial.cshtml") }