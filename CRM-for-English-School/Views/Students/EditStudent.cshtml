@model StudentModel
@using CRM_for_English_School.BLL.Entities;
@{
    ViewData["Title"] = "Редактирование студентов";
}
<div class="container">
    <h2>Редактировать студента</h2>
    <br />
    @using (Html.BeginForm("EditStudent", "Students", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        ;

        <div>
            @Html.ValidationSummary()
        </div>

        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="LastName">Фамилия</label>
                <input type="text" class="form-control" id="LastName" name="LastName" asp-for="LastName">
                <span class="alert-danger" asp-validation-for="LastName"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FirstName">Имя</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" asp-for="FirstName">
                <span class="alert-danger" asp-validation-for="FirstName"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="MiddleName">Отчество</label>
                <input type="text" class="form-control" id="MiddleName" name="MiddleName" asp-for="MiddleName">
                <span class="alert-danger" asp-validation-for="MiddleName"></span>
            </div>
            <div class="col-md-12">
                <label class="form-check-label" asp-for="Age">Возраст</label>
                <input type="number" class="form-control" id="Age" name="Age" asp-for="Age">
                <span class="alert-danger" asp-validation-for="Age"></span>
            </div>
            <!--
        <div class="col-md-6">
            <label asp-for="Group">Группа</label>
            <div>
                <select class="form-select" asp-for="Group" asp-items="">
                    <option selected="selected" value="Please select"></option>
                </select>
                <span asp-validation-for="Group" class="text-danger"></span>
            </div>
        </div>
    -->
            <div class="col-md-6">
                <label asp-for="CurrentEnglishLevel">Текущий уровень владения языком</label>
                <div>
                    <select class="form-select" asp-for="CurrentEnglishLevel" asp-items="Html.GetEnumSelectList<EnglishLevel>()">
                        <option selected="selected" value="Please select"></option>
                    </select>
                    <span asp-validation-for="CurrentEnglishLevel" class="text-danger"></span>
                </div>
            </div>
        </div>


        <button type="submit" class="btn btn-success">Сохранить</button>
        @Html.ActionLink("Удалить", "DeleteStudent", "Students", new { id = Model.Id }, new { @class = "btn btn-danger" })
    }
</div>

@section Scripts{ @await Html.PartialAsync("_ValidationScriptsPartial.cshtml") }