@model RequestModel
@using CRM_for_English_School.BLL.Entities;
@{
    ViewData["Title"] = "Редактирование запроса";
}
<div class="container">
    <h2>Редактировать запрос</h2>
    <br />
    @using (Html.BeginForm("EditRequest", "Requests", FormMethod.Post))
    {
        @Html.HiddenFor(x => x.Id)
        ;

        <div>
            @Html.ValidationSummary()
        </div>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="LastName">Фамилия</label>
                <input type="text" class="form-control" id="LastName" name="LastName" value="@Model.LastName" asp-for="LastName">
                <span asp-validation-for="LastName" class="alert-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="FirstName">Имя</label>
                <input type="text" class="form-control" id="FirstName" name="FirstName" value="@Model.FirstName" asp-for="FirstName">
                <span asp-validation-for="FirstName" class="alert-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="MiddleName">Отчество</label>
                <input type="text" class="form-control" id="MiddleName" name="MiddleName" value="@Model.MiddleName" asp-for="MiddleName">
                <span asp-validation-for="MiddleName" class="alert-danger"></span>
            </div>
            <div class="col-md-12">
                <label class="form-check-label" asp-for="Age">Возрас</label>
                <input type="number" class="form-control" id="Age" name="Age" value="@Model.Age" asp-for="Age">
                <span asp-validation-for="Age" class="alert-danger"></span>
            </div>
            <div class="col-md-12">
                <label asp-for="Email">Email</label>
                <div class="input-group">
                    <span class="input-group-text">@@</span>
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" asp-for="Email">
                    <span asp-validation-for="Email" class="alert-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="PhoneNumber">Номер телефона</label>
                <div class="input-group">
                    <span class="input-group-text">+375</span>
                    <input type="text" class="form-control" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber" asp-for="PhoneNumber">
                    <span asp-validation-for="PhoneNumber" class="alert-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="CurrentEnglishLevel">Current English Level</label>
                <div>
                    <select class="form-select" asp-for="CurrentEnglishLevel" asp-items="Html.GetEnumSelectList<EnglishLevel>()">
                        <option selected="selected" value="Please select"></option>
                    </select>
                    <span asp-validation-for="CurrentEnglishLevel" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <label asp-for="Status">Status</label>
                <div>
                    <select class="form-select" asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()">
                        <option selected="selected" value="Please select"></option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
            </div>
        </div>

        <br />
        <button type="submit" class="btn btn-success">Сохранить</button>
        @Html.ActionLink("Удалить", "DeleteRequest", "Requests", new { id = Model.Id }, new { @class = "btn btn-danger" })
    }
</div>

@section Scripts{ @await Html.PartialAsync("_ValidationScriptsPartial.cshtml") }